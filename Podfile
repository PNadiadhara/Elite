platform :ios, '12.0'

  use_frameworks!

  def elite_pods
    pod 'SnapSDK'
    pod 'Kingfisher'
    pod 'GoogleMaps'
    pod 'GooglePlaces'
    pod 'FBSDKLoginKit'
    pod 'SAConfettiView'
    pod 'Toucan'
    pod 'GoogleSignIn'
        pod 'Firebase/Core'
    pod 'Firebase/Auth'
    pod 'Firebase/Firestore'
    pod 'Firebase/Storage'
  end

  target 'Elite' do
    elite_pods
  end

  target 'FirebaseTests' do
    elite_pods
  end